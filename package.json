{
    "name": "unity-templates",
    "version": "0.15.1",
    "type": "module",
    "description": "A CLI tool for managing Unity script and project templates",
    "author": "cookie1170",
    "preferGlobal": true,
    "bin": {
        "unity-templates": "./dist/index.js"
    },
    "scripts": {
        "dev": "bun run src/index.ts",
        "build": "rm -f ./dist/index.js && touch ./dist/index.js && echo \"#!/usr/bin/env node\" >> ./dist/index.js && bun build --packages external --target node --entrypoints ./src/index.ts --production >> ./dist/index.js",
        "prepack": "bun run build",
        "postpublish": "bun run createGithubRelease.ts"
    },
    "files": [
        "README.md",
        "dist"
    ],
    "dependencies": {
        "@topcli/prompts": "^2.4.1",
        "commander": "^14.0.2",
        "conf": "^15.0.2",
        "exit-hook": "^5.0.0",
        "open": "^10.2.0",
        "ora": "^9.0.0",
        "tar": "^7.5.1",
        "unity-helper": "^0.4.2"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^18.19.130",
        "@types/prompts": "^2.4.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
