{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "../dist",
        "rootDir": ".",
        "types": ["bun-types"]
    },
    "exclude": ["node_modules", "dist", "test/**/*"],
    "references": [{ "path": "../" }]
}
